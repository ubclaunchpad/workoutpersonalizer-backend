// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model VideoContent {
  id              Int      @id @default(autoincrement())
  name            String
  url             String
  thumbnail       String
  workoutSection  WorkoutSection?
}

model WorkoutSection {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?
  duration        Int
  content         VideoContent?  @relation(fields: [contentId], references: [id])
  contentId       Int?
  icon            String?
}